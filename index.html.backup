<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#0a0a0f">

    <!-- SEO Meta Tags -->
    <title>Leanyfi - Yung Lean Music Quiz Game</title>
    <meta name="description"
        content="Test your Yung Lean knowledge! Play music quizzes, recognize songs in 5 seconds, and unlock achievements. From Sad Boys to Stardust.">
    <meta name="keywords" content="yung lean, sad boys, music quiz, drain gang, game, kyoto, ginseng strip">

    <!-- Open Graph -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Leanyfi - Yung Lean Music Quiz Game">
    <meta property="og:description"
        content="Test your Yung Lean knowledge! Play music quizzes and unlock achievements.">
    <meta property="og:url" content="https://leanyfi.com">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@300;400;500;600;700&family=VT323&display=swap"
        rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="styles/components.css">
    <link rel="stylesheet" href="styles/animations.css">
</head>

<body>
    <!-- Background Effects -->
    <div class="bg-gradient"></div>
    <div class="vhs-overlay"></div>

    <!-- Main Container -->
    <div id="app">
        <!-- Landing Screen -->
        <div id="landing-screen" class="screen active">
            <header class="header">
                <div class="logo-container">
                    <h1 class="logo glitch" data-text="LEANYFI">LEANYFI</h1>
                    <p class="tagline">Sad Boys Music Quiz</p>
                </div>
            </header>

            <main class="landing-main">
                <div class="hero-section">
                    <div class="stats-preview glass-card">
                        <div class="stat-item">
                            <span class="stat-value" id="total-plays">0</span>
                            <span class="stat-label">Games Played</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="user-level">1</span>
                            <span class="stat-label">Level</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="badges-count">0</span>
                            <span class="stat-label">Badges</span>
                        </div>
                    </div>

                    <button class="btn btn-primary btn-large pulse" id="start-btn">
                        <span>Start Playing</span>
                        <div class="btn-glow"></div>
                    </button>

                    <button class="btn btn-secondary" id="stats-btn">View Stats</button>
                </div>
            </main>
        </div>

        <!-- Mode Selection Screen -->
        <div id="mode-screen" class="screen">
            <header class="header-small">
                <button class="btn-back" id="back-to-landing">‚Üê Back</button>
                <h2>Select Game Mode</h2>
            </header>

            <main class="mode-grid">
                <div class="mode-card glass-card" data-mode="song-recognition">
                    <div class="mode-icon">üéµ</div>
                    <h3>Song Recognition</h3>
                    <p>Guess the track in 5 seconds</p>
                    <div class="difficulty-selector">
                        <button class="difficulty-btn active" data-difficulty="normal">Normal</button>
                        <button class="difficulty-btn" data-difficulty="hardcore">Hardcore</button>
                    </div>
                    <button class="btn btn-primary">Play</button>
                </div>

                <div class="mode-card glass-card" data-mode="album-recognition">
                    <div class="mode-icon">üíø</div>
                    <h3>Album Recognition</h3>
                    <p>Identify the album</p>
                    <button class="btn btn-primary">Play</button>
                </div>

                <div class="mode-card glass-card" data-mode="lyric-quiz">
                    <div class="mode-icon">üìù</div>
                    <h3>Lyric Quiz</h3>
                    <p>Complete the lyrics</p>
                    <button class="btn btn-primary">Play</button>
                </div>

                <div class="mode-card glass-card locked" data-mode="era-recognition">
                    <div class="mode-icon">üïê</div>
                    <h3>Era Recognition</h3>
                    </header>

                    <main class="stats-main">
                        <div class="profile-card glass-card">
                            <div class="level-display">
                                <span class="level-number" id="profile-level">1</span>
                                <span class="level-title" id="level-title">Sad Boy</span>
                            </div>
                            <div class="xp-bar">
                                <div class="xp-progress" id="xp-progress" style="width: 0%"></div>
                                <span class="xp-text"><span id="current-xp">0</span> / <span
                                        id="next-level-xp">100</span>
                                    XP</span>
                            </div>
                        </div>

                        <div class="stats-grid">
                            <div class="stat-card glass-card">
                                <span class="stat-icon">üéÆ</span>
                                <span class="stat-number" id="total-games">0</span>
                                <span class="stat-name">Games Played</span>
                            </div>
                            <div class="stat-card glass-card">
                                <span class="stat-icon">‚úÖ</span>
                                <span class="stat-number" id="correct-answers">0</span>
                                <span class="stat-name">Correct Answers</span>
                            </div>
                            <div class="stat-card glass-card">
                                <span class="stat-icon">üéØ</span>
                                <span class="stat-number" id="accuracy-stat">0%</span>
                                <span class="stat-name">Accuracy</span>
                            </div>
                            <div class="stat-card glass-card">
                                <span class="stat-icon">üî•</span>
                                <span class="stat-number" id="best-streak-stat">0</span>
                                <span class="stat-name">Best Streak</span>
                            </div>
                        </div>

                        <div class="badges-section">
                            <h3>Achievements</h3>
                            <div class="badges-grid" id="badges-grid">
                                <!-- Badges will be dynamically inserted -->
                            </div>
                        </div>
                    </main>
                </div>
        </div>

        <!-- Particle Container -->
        <div id="particles"></div>

        <!-- Scripts -->
        <script src="js/api/spotify.js"></script>
        <script src="js/data/songs.js"></script>
        <script src="js/data/albums.js"></script>
        <script src="js/data/badges.js"></script>
        <script src="js/core/AudioPlayer.js"></script>
        <script src="js/core/GameEngine.js"></script>
        <script src="js/core/StatsManager.js"></script>
        <script src="js/ui/UIManager.js"></script>
        <script src="js/modes/SongRecognition.js"></script>
        <script src="js/modes/AlbumRecognition.js"></script>
        <script src="js/modes/LyricQuiz.js"></script>
        <script src="js/app.js"></script>
</body>

</html>